@model Bank.Models.Entities.MoneyOrder

<td>
    @Html.DisplayFor(model => model.Amount)
    <input type="hidden" id="moId" value="@string.Format(Model.Id.ToString())" />
</td>

<td>

    @string.Format(!Model.Signed ? "Requested" : "Not Requested")
</td>

<td>
    @string.Format(Model.Signed ? "Signed" : "Not Signed")
</td>
<td>
    <input id="SignMO" type="Button" value="Sign" onclick="SignMO(@string.Format(Model.Id.ToString()));" />
</td>

<script>
    var moRequest;



    function SignMO(moId)
    {
        //var moId = $("#moId").val();
        $.ajax({
            type: 'GET',
            url: 'http://localhost:58019/Bank/SignMoneyOrder',
            data: {id : moId}
        }).done(function (data) {

            alert("Money Order Requested!!");
        }).error(function (data) {
            alert("Money Order Not Found!!");
        });


    }

   
</script>
